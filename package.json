{
  "name": "mcpm",
  "version": "0.0.1",
  "type": "module",
  "bin": {
    "mcpm": "./build/index.js"
  },
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc && chmod 755 build/index.js",
    "run": "bun src/index.ts --server=mcp-atlassian --enable-logging",
    "dev": "npx @modelcontextprotocol/inspector npm run run",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage --coverage-reporter=text"
  },
  "files": [
    "build"
  ],
  "keywords": [],
  "author": "Brendan Mullins <megamaaaan@gmail.com>",
  "license": "MIT",
  "description": "Model Context Protocol MCP manager",
  "dependencies": {
    "@inquirer/prompts": "^7.4.1",
    "@modelcontextprotocol/sdk": "^1.10.1",
    "child_process": "^1.0.2",
    "commander": "^13.1.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^22.14.1",
    "typescript": "^5.8.3"
  }
}
