{
  "name": "mcpm",
  "version": "1.0.0",
  "type": "module",
  "bin": {
    "mcpm": "./build/index.js"
  },
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc && chmod 755 build/index.js",
    "run": "bun src/index.ts --mcp-server=mcp-atlassian --config=./mcpm.config.json",
    "dev": "npx @modelcontextprotocol/inspector npm run run",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage --coverage-reporter=lcov --coverage-dir=coverage"
  },
  "files": [
    "build"
  ],
  "keywords": [],
  "author": "Brendan Mullins <megamaaaan@gmail.com>",
  "license": "MIT",
  "description": "Model Context Protocol MCP manager",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.1",
    "child_process": "^1.0.2",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "typescript": "^5.8.3"
  }
}
