{
    "mcpServers": {
        "mcp-atlassian": {
            "command": "uvx",
            "args": [
                "mcp-atlassian",
                "--confluence-url=your_confluence_url_here",
                "--confluence-username=your_confluence_username_here",
                "--confluence-token=your_confluence_token_here",
                "--jira-url=your_jira_url_here",
                "--jira-username=your_jira_username_here",
                "--jira-token=your_jira_token_here"
            ],
            "logging": false,
            "tools": {
                "allow": ["confluence_search", "confluence_get_page"]
            }
        }
    }
}